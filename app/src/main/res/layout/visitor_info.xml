<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >


    <TextView
        android:id="@+id/f_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:layout_marginTop="150dp"
        android:textSize="30dp"
        android:textColor="#0b7784"
        android:textAllCaps="false"/>
    <TextView
        android:id="@+id/f_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="25dp"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/f_name"
        android:layout_marginTop="153dp"
        />
    <EditText
        android:id="@+id/f_name_txt"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="@+id/f_name"
        android:layout_alignStart="@+id/f_name"
        android:layout_below="@+id/f_name"
        android:textSize="28dp"
        android:inputType="text"
        android:backgroundTint="#0b7784"/>


    <TextView
        android:id="@+id/l_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:layout_alignParentStart="@+id/f_name_txt"
        android:layout_alignStart="@+id/f_name_txt"
        android:layout_below="@+id/f_name_txt"
        android:textSize="30dp"
        android:textColor="#0b7784"
        android:textAllCaps="false"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="25dp"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/f_star"
        android:layout_toRightOf="@+id/l_name"
        android:layout_marginTop="65dp"
        />
    <EditText
        android:id="@+id/l_name_txt"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="@+id/l_name"
        android:layout_alignStart="@+id/l_name"
        android:layout_below="@+id/l_name"
        android:textSize="28dp"
        android:inputType="text"
        android:backgroundTint="#0b7784"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Id"
        android:layout_alignParentStart="@+id/l_name_txt"
        android:layout_alignStart="@+id/l_name_txt"
        android:layout_below="@+id/l_name_txt"
        android:textSize="30dp"
        android:textColor="#0b7784"
        android:textAllCaps="false"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="25dp"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/l_name_txt"
        android:layout_toRightOf="@+id/email"
        />
    <EditText
        android:id="@+id/email_txt"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:textSize="28dp"
        android:inputType="textEmailAddress"
        android:backgroundTint="#0b7784"/>

    <Button
        android:id="@+id/next"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_txt"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="45dp"
        android:text="Take a Photo"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:drawableRight="@drawable/arrowhite"
        android:background="@drawable/otp_btn"/>


</RelativeLayout>