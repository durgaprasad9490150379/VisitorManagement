<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >


    <TextView
        android:id="@+id/cname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Name"
        android:layout_marginTop="150dp"
        android:textSize="30dp"
        android:textColor="#0b7784"
        android:textAllCaps="false"/>
    <TextView
        android:id="@+id/f_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="25dp"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/cname"
        android:layout_marginTop="153dp"
        />
    <EditText
        android:id="@+id/company_name"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="@+id/cname"
        android:layout_alignStart="@+id/cname"
        android:layout_below="@+id/cname"
        android:textSize="28dp"
        android:inputType="text"
        android:backgroundTint="#0b7784"/>


    <TextView
        android:id="@+id/purpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purpose"
        android:layout_alignParentStart="@+id/company_name"
        android:layout_alignStart="@+id/company_name"
        android:layout_below="@+id/company_name"
        android:textSize="30dp"
        android:textColor="#0b7784"
        android:textAllCaps="false"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="25dp"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/f_star"
        android:layout_toRightOf="@+id/purpose"
        android:layout_marginTop="65dp"
        />
    <EditText
        android:id="@+id/purpose_txt"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="@+id/purpose"
        android:layout_alignStart="@+id/purpose"
        android:layout_below="@+id/purpose"
        android:textSize="28dp"
        android:inputType="text"
        android:backgroundTint="#0b7784"/>

    <TextView
        android:id="@+id/meet_whom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whom do you wish to meet"
        android:layout_alignParentStart="@+id/purpose_txt"
        android:layout_alignStart="@+id/purpose_txt"
        android:layout_below="@+id/purpose_txt"
        android:textSize="30dp"
        android:textColor="#0b7784"
        android:textAllCaps="false"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="25dp"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/purpose_txt"
        android:layout_toRightOf="@+id/meet_whom"
        />
    <EditText
        android:id="@+id/meet_whom_txt"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="@+id/meet_whom"
        android:layout_alignStart="@+id/meet_whom"
        android:layout_below="@+id/meet_whom"
        android:textSize="28dp"
        android:inputType="text"
        android:backgroundTint="#0b7784"/>


    <TextView
        android:id="@+id/dept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Department"
        android:layout_alignParentStart="@+id/meet_whom_txt"
        android:layout_alignStart="@+id/meet_whom_txt"
        android:layout_below="@+id/meet_whom_txt"
        android:textSize="30dp"
        android:textColor="#0b7784"
        android:textAllCaps="false"/>

    <EditText
        android:id="@+id/dept_txt"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="@+id/dept"
        android:layout_alignStart="@+id/dept"
        android:layout_below="@+id/dept"
        android:textSize="28dp"
        android:inputType="text"
        android:backgroundTint="#0b7784"/>


    <Button
        android:id="@+id/submit"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dept_txt"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:text="Next"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:drawableRight="@drawable/arrowhite"
        android:background="@drawable/otp_btn"/>


</RelativeLayout>